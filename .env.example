# App runtime: use pooled URL (e.g. Neon POSTGRES_PRISMA_URL).
# DATABASE_URL is used by the app at runtime for queries.
DATABASE_URL="postgresql://user:password@host/dbname?sslmode=require"

# Migrations/seed: use non-pooled URL (e.g. DATABASE_URL_UNPOOLED or POSTGRES_URL_NON_POOLING).
# DIRECT_URL is used by prisma migrate and prisma db seed; it is more reliable for long transactions.
DIRECT_URL="postgresql://user:password@host/dbname?sslmode=require"

# Local SQLite (optional override for MVP):
# DATABASE_URL="file:./dev.db"
# DIRECT_URL="file:./dev.db"
